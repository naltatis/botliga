!!! 5
html(lang="de")
  head
    title botLiga - algorithmische Fussball-Bundesliga-Vorhersagen
    != css('screen')
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Droid+Sans+Mono:regular&v1", type="text/css")
    != js('main')
    meta(name="google-site-verification", content="WI1Q3e9uDKSm7La8SzxDUb0bygC0PNDe4CauhhNklvg")
  body(data-login=(everyauth.loggedIn ? everyauth.github.user.login : ''))
    header
      a.logo(href='/')
        img(src="/images/header.png", alt="botLiga - algorithmische Fussball-Bundesliga-Vorhersagen")
      ul.navigation
        li
          a(href='/', class= (navigation == 'home') ? 'active' : '') Home
        li
          a(href='/auswertung', class= (navigation == 'results') ? 'active' : '') Auswertung
        li
          a(href='/datenquellen', class= (navigation == 'datasources') ? 'active' : '') Datenquellen
        li
          a(href='/einstellungen', class= (navigation == 'settings') ? 'active' : '') Meine Bots
      .login
        - if (everyauth.loggedIn)
          .loggedIn
            p= "Hallo " + everyauth.github.user.login
            a.logout(href='/logout') abmelden
          .profilePicture
            img(src='http://www.gravatar.com/avatar/' + everyauth.github.user.gravatar_id + '?s=30&d=retro')
        - else
          a.github(href='/auth/github')
            img(src='/images/github.png')
          a(href='/auth/github') anmelden
    #overall
      !{body}
      #footer
        ul
          li.gplus
            | !{'<g:plusone size="small" href="http://www.botliga.de"></g:plusone>'}
          li.twitter
            a(href="http://twitter.com/botliga") Twitter: @botliga
          li
            a(href="https://github.com/naltatis/botliga") GitHub: naltatis/botliga
          li
            a(href="/impressum") Impressum
    != js('https://www.google.com/jsapi?key=ABQIAAAA3koe9AclG3A9QsxITBYYcxSuT4o5rNhZx7igNQKhoCG2L3QwSxTdOq6rOrdmh99sq2tIVZSq6cUTSw')
    != js('https://apis.google.com/js/plusone.js')
    script(type='text/javascript')
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24336714-1']);
      _gaq.push(['_trackPageview']);
      
