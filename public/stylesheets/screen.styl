@import 'nib/reset'
@import 'nib/vendor'
@import 'nib/positions'

global-reset()
reset-html5()

body
  font-size 15px
  margin 0
  padding 0
  background url(/images/black_paper.png)
  text-align center
  z-index 1
  font-size 14px
  font-family 'Helvetica', Helvetica, Arial, sans-serif

a
  text-decoration none
  &:hover
    text-decoration underline
    
pre
  font-family 'Bitstream Vera Sans Mono', 'Menlo', 'Monaco', 'Courier', monospace

header
  position relative
  text-align left
  margin 0 auto
  background-color rgba(255,255,255,0.8)
  width 840px
  padding 5px 30px 5px
  box-shadow 0 1px 4px rgba(0, 0, 0, 0.9), 0 -10px 40px rgba(0, 0, 0, 0.4) inset
  border-radius 0 0 10px 10px
  
  h1
    font-size 60px
    text-shadow 1px 1px 1px #888  
    font-family 'Cabin Sketch', serif
    strong
      color green
  h2
    font-family 'Droid Sans Mono', serif;
    font-size 11px
    line-height 13px
    margin-top -8px
    color black
    margin-bottom 4px
  .login
    text-align right
    absolute right 20px bottom 14px
    a
      display block
      color #000
    .logo
      margin-bottom 8px
  .navigation
    absolute bottom 10px left 300px
    li
      display inline-block
    a
      display block
      padding 4px 20px
      color #000
      &.active
        color green

#overall
  position relative
  margin 30px auto 0
  background-color rgba(255,255,255,0.8)
  width 840px
  text-align left
  padding 30px
  box-shadow 0 0 4px rgba(0, 0, 0, 0.9), 0 0 20px rgba(0, 0, 0, 0.5) inset
  border-radius 10px 10px 0 0
  .gist
    .gist-file
      border none
    .gist-meta
      font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 10px
      padding 2px 2px 15px
      color #000
      background-color #bdbdbd
      a
        color #000
    .gist-data
      padding-top 5px
      padding-bottom 5px
      border none
      background-color #fff
      
.copy
  h2
    color green
    font-size 24px
    margin-bottom 12px
  h3
    font-weight bold
    font-size 18px
    margin-bottom 18px
  p, ul, ol
    margin-bottom 15px
    line-height 16px
  ul
    list-style-type disc
  ol
    list-style-type decimal
  li
    margin-bottom 4px
    margin-left 20px
  .rules
    strong
      display block
      font-weight bold
    em
      display block
      font-size 12px
      color #444
  
#dotChart
#lineChart
  background #fff
  margin-bottom 14px
  
#botList
  li
    margin-bottom 20px
  h3
    font-size 20px
    color green
  .api span
  .repository label
  .noApi label
  .example label
    font-weight bold
    width 160px
    display inline-block
    em
      font-weight normal
      font-size 13px
  .api
    margin-bottom 10px
    pre
      display inline-block
  .repository
    margin-bottom 10px
    select
      width 200px
  .example
    margin-bottom 10px
    label
      display block
      margin-bottom 5px
  .noApi
    margin-bottom 10px
    label
      width auto
      font-weight normal
    input
      display inline-block
      margin-right 5px
  .noApiDetails
    display none
    margin-bottom 20px
    margin-left 20px
    margin-right 10px
    label
      display inline-block
      margin-right 10px
    input
      display inline-block
      width: 300px
      padding 2px
      border 1px solid #aaa
  .example
  .noApiDetails
    p
      margin-bottom 5px
    pre
      display inline-block
      padding 3px
      font-size 12px
      background-color #fff
      strong
        font-weight bold
        
table.result
  margin-bottom 20px
  width 100%
  background-color #fff
  border-collapse collapse
  caption
    font-size 15px
    font-weight bold
    margin-bottom 8px
  th, td
    font-size 11px
    padding 4px 3px
    border 1px solid #aaa
    text-align center
  th
    width 3%
    font-weight bold
    background-color #f4f4f4
  th.bot
    text-align left
    width 15%
    
#botsByGroupsChart
  background-color white